  body
    /img#coffee[src="images/coffee.jpg"]
    div#profile
      p#name Totz Yuta
      p#about Web/iOS Developer
      a.icon[href="https://github.com/totzyuta" target="_blank"]
        span.li_lab[aria-hidden="true"]
      a.icon[href="https://twitter.com/totzyuta" target="_blank"]
        span.li_bulb[aria-hidden="true"]
      a.icon[href="https://www.linkedin.com/in/yutatotz" target="_blank"]
        span.li_news[aria-hidden="true"]
      a.icon[href="https://totzyuta.github.io" target="_blank"]
        span.li_pen[aria-hidden="true"]


sass:
  body
    margin: -10px
    background-image: url("images/coffee.jpg")
    background-size: cover
    background-repear: no-repeat
    overflow: hidden

  div
    position: absolute
    top: 55px
    left: 55px
    color: #fff

  p
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
    font-style: normal
    font-variant: normal
    font-weight: 100
    line-height: 26.3999996185303px

  #name
    font-size: 60px

  #about
    font-size: 21px
    margin-top: -31px
    margin-left: 10px

  #icons
    margin-left: 10px

  a
    color: #fff
    text-decoration: none
    font-size: 30px
    margin-right: 20px
    margin-left: 10px


coffee:
  $('.icon').jrumble
    speed: 100
    x: 3
    y: 3
    rotation: 10
  $('.icon').hover (->
    $(this).trigger 'startRumble'
    return
  ), ->
    $(this).trigger 'stopRumble'
    return
